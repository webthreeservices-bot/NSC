# NSC Bot Platform - Example environment variables
# Copy this file to .env.local and fill in real values before running in dev/production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/nsc_db

# JWT / Authentication
JWT_SECRET=your_jwt_secret_here
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here

# Encryption
ENCRYPTION_KEY=32_character_encryption_key_here

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="NSC Bot Platform"

# Optional: other service keys
# SENTRY_DSN=
# SNYK_TOKEN=

# Platform wallet addresses (used to collect lost commissions)
PLATFORM_WALLET_BSC=0x0000000000000000000000000000000000000000
PLATFORM_WALLET_TRON=TGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ENABLE_ONCHAIN_DISTRIBUTION=false

# Redis URL for job queue (Bull)
REDIS_URL=redis://127.0.0.1:6379

# Tron deployment config
PRIVATE_KEY=your_private_key_here
TRON_FULL_HOST=https://api.shasta.trongrid.io
TREASURY_ADDRESS=TR7xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Feature flag to disable all web3 / smart contract interactions. When true, the system will simulate verifications and payouts off-chain.
WEB3_DISABLED=false
NEXT_PUBLIC_WEB3_DISABLED=false
